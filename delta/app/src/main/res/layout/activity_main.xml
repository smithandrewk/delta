<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/boxInsetLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:deviceIds="wear"
    android:background="@android:color/black">


    <ScrollView
        android:id="@+id/MainScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="26dp">
        <requestFocus />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="50dp"
            android:paddingBottom="50dp">

            <Button
                android:id="@+id/eatButton"
                android:backgroundTint="@color/button_background"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center"
                android:gravity="bottom|end"
                android:drawableLeft="@drawable/ic_pizza_outline"
                android:text="Eating"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="@color/button_text"/>

            <Button
                android:id="@+id/drinkButton"
                android:backgroundTint="@color/button_background"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center"
                android:gravity="bottom|end"
                android:drawableLeft="@drawable/ic_cafe_outline"
                android:text="Drinking"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="@color/button_text" />

            <Button
                android:id="@+id/smokeButton"
                android:backgroundTint="@color/button_background"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center"
                android:gravity="bottom|end"
                android:drawableStart="@drawable/ic_smoking"
                android:text="Smoking"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="@color/button_text" />

            <Button
                android:id="@+id/otherButton"
                android:backgroundTint="@color/button_background"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center"
                android:gravity="bottom|end"
                android:drawableStart="@drawable/ic_three_dots"
                android:text="Other Activity"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="@color/button_text" />
        </LinearLayout>
    </ScrollView>

    <view
        android:id="@+id/topText"
        class="androidx.wear.widget.CurvedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose an Activity"
        android:layout_gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#FFFFFF"/>


</androidx.constraintlayout.widget.ConstraintLayout>
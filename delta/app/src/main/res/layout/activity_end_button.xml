<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EndActivityButton">

    <Button
        android:id="@+id/endActivityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="88dp"
        android:text="End Current Activity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <view
        android:id="@+id/filename"
        class="androidx.wear.widget.CurvedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="filename"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <view
        android:id="@+id/samplingFrequency"
        class="androidx.wear.widget.CurvedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="180"
        android:text="samplingFrequency"
        app:clockwise="false"
        app:layout_constraintStart_toStartOf="@+id/filename"
        app:layout_constraintTop_toTopOf="@+id/filename" />
</androidx.constraintlayout.widget.ConstraintLayout>